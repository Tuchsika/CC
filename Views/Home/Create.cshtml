@model WebApplication5.Models.ExampleClass
@{
    ViewBag.Title = "Create";
}
<style>
    .form-control{
        max-width:100%;
    }
</style>
@{
    if (Session["Email"]!=null)
    {
        <h4>โพสต์แหล่งความรู้ที่คุณอยากแชร์</h4>
        <hr />
        using (Html.BeginForm("Create", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label>ชื่อโพสต์</label>
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group">
                <label>ข้อความ</label>
                @Html.TextAreaFor(model => model.HtmlContent)
            </div>
            <input type="submit" id="save" value="แชร์ความรู้ของคุณ" class="form-control btn btn-primary" />
        }
    }
    else
    {
        <h2>โปรดล็อคอินเข้าสู่ระบบก่อนใช้งานก่อน....</h2>
    }

}

<script src="~/Scripts/tinymce/tinymce.js"></script>
<script src="~/Scripts/main.js"></script>